{% extends 'base.html.twig' %}

{% block title %}Personne index{% endblock %}

{% block body %}
    <h1>Personne index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Datenaissance</th>
                <th>Sexe</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Fonction</th>
                <th>Profession</th>
                <th>Actif</th>
                <th>Slug</th>
                <th>CreatedOn</th>
                <th>EditedOn</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr>
                <td>{{ personne.id }}</td>
                <td>{{ personne.nom }}</td>
                <td>{{ personne.prenom }}</td>
                <td>{{ personne.datenaissance ? personne.datenaissance|date('Y-m-d') : '' }}</td>
                <td>{{ personne.sexe }}</td>
                <td>{{ personne.telephone }}</td>
                <td>{{ personne.email }}</td>
                <td>{{ personne.fonction }}</td>
                <td>{{ personne.profession }}</td>
                <td>{{ personne.actif ? 'Yes' : 'No' }}</td>
                <td>{{ personne.slug }}</td>
                <td>{{ personne.createdOn ? personne.createdOn|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ personne.editedOn ? personne.editedOn|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('personne_show', {'id': personne.id}) }}">show</a>
                    <a href="{{ path('personne_edit', {'id': personne.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('personne_new') }}">Create new</a>
{% endblock %}
